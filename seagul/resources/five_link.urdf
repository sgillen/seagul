<?xml version="1.0"?>

<robot xmlns="http://drake.mit.edu"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://drake.mit.edu ../../doc/drakeURDF.xsd" name="three_link">
  <material name="black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="MITred">
    <color rgba=".6 .2 .2 1" />
  </material>

  <!-- first define all the links   -->
  <!-- ============================================================================== -->

  <link name="base">
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.01" />
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0" iyz="0" izz="0" />
    </inertial>
  </link>
  
  <link name="lower_stance">
    <inertial> 
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> 
    </inertial>
    <visual>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
      <color rgba="1 1 0 1" />
    </visual>
    <collision>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
    </collision>
  </link>

  <link name="upper_stance">
    <inertial> 
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> 
    </inertial>
    <collision>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
      <color rgba="1 1 0 1" />
    </visual> 
  </link>
  
  <link name="torso">
    <inertial> 
      <origin xyz="0 0 -1.5" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> 
    </inertial>
    <collision>
      <origin xyz="0 0 -.25" rpy="0 0 0" />
      <geometry>
        <cylinder length=".5" radius=".01" />
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -.25" rpy="0 0 0" />
      <geometry>
        <cylinder length=".5" radius=".01" />
      </geometry>
      <color rgba="1 1 0 1" />
    </visual>    
  </link>

  <link name="lower_swing">
    <inertial> 
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> 
    </inertial>
    <visual>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
      <color rgba="1 1 0 1" />
    </visual>
    <collision>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
    </collision>
  </link>

  <link name="upper_swing">
    <inertial> 
      <origin xyz="0 0 -1" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/> 
    </inertial>
    <collision>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
    </collision>
    <visual>
      <origin xyz="0 0 -.5" rpy="0 0 0" />
      <geometry>
        <cylinder length="1" radius=".01" />
      </geometry>
      <color rgba="1 1 0 1" />
    </visual> 
  </link>
  

  <!-- now all the joints and motors   -->
  <!-- ============================================================================== -->

  
  <joint name="base_joint" type="continuous">
    <parent link="base"/>
    <child link="lower_stance" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <joint name="stance_knee" type="continuous">
    <parent link="lower_stance"/>
    <origin xyz="0 0 -1" />
    <child link="upper_stance" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>

  <transmission type="SimpleTransmission" name="stance_trans">
    <actuator name="stance_knee" />
    <joint name="stance_knee" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  
  <joint name="torso_joint" type="continuous">
    <parent link="upper_stance"/>
    <origin xyz="0 0 -1" />
    <child link="torso" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>
  <transmission type="SimpleTransmission" name="torso_trans">
    <actuator name="torso_joint" />
    <joint name="torso_joint" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  <joint name="swing_stance" type="continuous">
    <parent link="upper_stance"/>
    <origin xyz="0 0 -1" />
    <child link="upper_swing" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>
  <transmission type="SimpleTransmission" name="swing_stance_trans">
    <actuator name="swing_stance" />
    <joint name="swing_stance" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

  
  <joint name="swing_knee" type="continuous">
    <parent link="upper_swing"/>
    <origin xyz="0 0 -1" />
    <child link="lower_swing" />
    <axis xyz="0 1 0" />
    <dynamics damping="0.1" />
  </joint>
  <transmission type="SimpleTransmission" name="swing_trans">
    <actuator name="swing_knee" />
    <joint name="swing_knee" />
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>
  
  
  
</robot>
